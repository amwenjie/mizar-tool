{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "target": "es2020",
        "importHelpers": true,
        "downlevelIteration": true,
        "noEmitHelpers": false,
        "allowJs": true,
        "baseUrl": "src",
        "outDir": "dist",
        "pretty": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}