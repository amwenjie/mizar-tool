{
    "compilerOptions": {
        "target": "es3",
        "traceResolution": false,
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2019",
            "ES2020",
            "dom"
        ],
        "importHelpers": true,
        "allowJs": true,
        "baseUrl": "src",
        "outDir": "build",
        "pretty": true,
        "module": "CommonJS",
        "jsx": "react",
        "declaration": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}