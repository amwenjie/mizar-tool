{
    "compilerOptions": {
        "target": "ES2021",
        "traceResolution": false,
        "lib": ["ES2021"],
        "importHelpers": true,
        "allowJs": false,
        "baseUrl": "src",
        "outDir": "dist",
        "pretty": false,
        "module": "CommonJS",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}