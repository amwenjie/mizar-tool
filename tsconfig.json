{
    "include": [
        "bin/*.ts",
        "tools/**/*.ts",
        "Build.ts",
        "typings/**/*",
        "eslint.config.mjs",
    ],
    "compilerOptions": {
        "target": "ESNext",
        "traceResolution": false,
        "importHelpers": true,
        "removeComments": true,
        "noEmitHelpers": false,
        "allowJs": false,
        "rootDir": ".",
        "outDir": "./dist",
        "pretty": false,
        "module": "NodeNext",
        "jsx": "react",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}