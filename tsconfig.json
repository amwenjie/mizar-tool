{
    "include": [
        "bin",
        "tools",
        "Build.ts",
        "typings",
        "eslint.config.mjs",
    ],
    "compilerOptions": {
        "target": "ESNext",
        "traceResolution": false,
        "importHelpers": true,
        "removeComments": true,
        "noEmitHelpers": false,
        "allowJs": false,
        "baseUrl": ".",
        "outDir": "dist",
        "pretty": false,
        "module": "ESNext",
        "jsx": "react",
        "moduleResolution": "Bundler",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}