{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "traceResolution": false,
        "importHelpers": true,
        "removeComments": true,
        "noEmitHelpers": false,
        "allowJs": false,
        "baseUrl": ".",
        "outDir": "dist",
        "pretty": false,
        "module": "ESNext",
        "jsx": "react",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}